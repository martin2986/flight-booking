{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "/",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src"
  },
  "include": [
    "src/**/*",
    "src/emailTemplate/SendEmailTemplate.ts",
    "src/emailTemplate/EmailVerification.ts"
  ]
}
